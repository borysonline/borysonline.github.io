---
import AppLayout from '@layouts/AppLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const apps = await getCollection('apps');
  const privacy = await getCollection('app-privacy');
  
  return apps.map(app => {
    const appPrivacy = privacy.find(p => p.data.appId === app.slug);
    return {
      params: { id: app.slug },
      props: { app, privacy: appPrivacy },
    };
  });
}

const { app, privacy } = Astro.props;
const { Content } = privacy 
  ? await privacy.render() 
  : { Content: null };
---

<AppLayout title={`${app.data.title} - Privacy Policy`} description={`Privacy Policy for ${app.data.title}`}>
  <div class="breadcrumb">
    <a href="/apps/">Apps</a>
    <span>/</span>
    <a href={`/apps/${app.slug}/`}>{app.data.title}</a>
    <span>/</span>
    <span>Privacy Policy</span>
  </div>

  <h1>Privacy Policy</h1>
  <h2>{app.data.title}</h2>

  {privacy && (
    <div class="meta">
      {privacy.data.version && <p class="version">Version {privacy.data.version}</p>}
      <p class="updated">Last updated: {privacy.data.lastUpdated.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
    </div>
  )}

  {Content ? (
    <div class="privacy-content">
      <Content />
    </div>
  ) : (
    <div class="placeholder">
      <p>Privacy Policy for this application is not yet available. Please check back soon or contact the developer for more information.</p>
    </div>
  )}

  {privacy && privacy.data.dataCollection && privacy.data.dataCollection.length > 0 && (
    <section class="data-section">
      <h3>Data We Collect</h3>
      <ul>
        {privacy.data.dataCollection.map(item => <li>{item}</li>)}
      </ul>
    </section>
  )}

  {privacy && privacy.data.thirdParties && privacy.data.thirdParties.length > 0 && (
    <section class="data-section">
      <h3>Third-Party Services</h3>
      <p>This application uses the following third-party services:</p>
      <ul>
        {privacy.data.thirdParties.map(party => <li>{party}</li>)}
      </ul>
    </section>
  )}

  <nav class="app-nav">
    <a href={`/apps/${app.slug}/`} class="nav-button">← Back to {app.data.title}</a>
    <a href={`/apps/${app.slug}/terms/`} class="nav-button">Terms of Use →</a>
  </nav>
</AppLayout>

<style>
  .breadcrumb {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 2rem;
    font-size: 0.95rem;
    color: var(--color-muted);
  }

  .breadcrumb a {
    color: var(--color-link);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  h2 {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    color: var(--color-link);
  }

  .meta {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 6px;
    padding: 1rem;
    margin-bottom: 2rem;
    font-size: 0.95rem;
  }

  .meta p {
    margin: 0.25rem 0;
    color: var(--color-muted);
  }

  .version {
    font-weight: 500;
  }

  .privacy-content {
    font-size: 1.05rem;
    line-height: 1.8;
    margin-bottom: 2rem;
  }

  .privacy-content :global(h3) {
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-size: 1.3rem;
  }

  .privacy-content :global(h4) {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .privacy-content :global(p) {
    margin-bottom: 1rem;
  }

  .privacy-content :global(ul),
  .privacy-content :global(ol) {
    margin-left: 2rem;
    margin-bottom: 1rem;
  }

  .privacy-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .placeholder {
    background: var(--color-bg-secondary);
    border: 1px dashed var(--color-border);
    border-radius: 6px;
    padding: 2rem;
    text-align: center;
    color: var(--color-muted);
  }

  .data-section {
    background: var(--color-bg-secondary);
    border-left: 4px solid var(--color-link);
    padding: 1.5rem;
    margin: 2rem 0;
    border-radius: 4px;
  }

  .data-section h3 {
    margin-top: 0;
    color: var(--color-primary);
  }

  .data-section ul {
    margin-bottom: 0;
  }

  .app-nav {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
    flex-wrap: wrap;
  }

  .nav-button {
    flex: 1;
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border: 1px solid var(--color-border);
    border-radius: 6px;
    text-decoration: none;
    color: var(--color-link);
    font-weight: 500;
    text-align: center;
    transition: var(--transition);
  }

  .nav-button:hover {
    background: var(--color-bg-secondary);
  }

  @media (max-width: 768px) {
    .breadcrumb {
      font-size: 0.85rem;
    }

    .app-nav {
      flex-direction: column;
    }

    .nav-button {
      width: 100%;
    }
  }
</style>
