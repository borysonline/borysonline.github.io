---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import AppCard from '@components/AppCard.astro';
import BlogPostCard from '@components/BlogPostCard.astro';

const apps = await getCollection('apps');
const blog = await getCollection('blog');

const featuredApps = apps.filter(app => app.data.featured).slice(0, 3);
const recentPosts = blog
  .filter(post => !post.data.draft)
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 3);
---

<BaseLayout title="Borys Online - Apps & Blog" description="Catalog of applications and blog posts">
  <div class="home">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content animate-fade-in">
        <h1>
          <span class="hero-greeting">Welcome to</span>
          <span class="gradient-text">Borys Online</span>
        </h1>
        <p class="hero-description">
          A collection of beautifully crafted applications and insights from the development world.
        </p>
        <div class="hero-buttons">
          <a href="/apps/" class="button">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="3" width="7" height="7" rx="1"/>
              <rect x="14" y="3" width="7" height="7" rx="1"/>
              <rect x="14" y="14" width="7" height="7" rx="1"/>
              <rect x="3" y="14" width="7" height="7" rx="1"/>
            </svg>
            Explore Apps
          </a>
          <a href="/blog/" class="button-secondary">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 20h9"/>
              <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"/>
            </svg>
            Read Blog
          </a>
        </div>
      </div>
      <div class="hero-glow"></div>
    </section>

    <!-- Featured Apps -->
    {apps.length > 0 && (
      <section class="featured-section animate-slide-up">
        <div class="section-header">
          <div class="section-title">
            <span class="section-label">Applications</span>
            <h2>Featured Apps</h2>
          </div>
          <a href="/apps/" class="view-all">
            View All
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>

        <div class="apps-grid">
          {apps.slice(0, 3).map((app, index) => (
            <div class={`stagger-${index + 1}`} style="opacity: 0; animation: fadeIn 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;">
              <AppCard
                title={app.data.title}
                description={app.data.description}
                slug={app.slug}
                version={app.data.version}
                category={app.data.category}
                icon={app.data.icon}
                featured={app.data.featured}
              />
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- Latest Blog Posts -->
    {blog.length > 0 && (
      <section class="blog-section animate-slide-up">
        <div class="section-header">
          <div class="section-title">
            <span class="section-label">Latest Updates</span>
            <h2>Blog Posts</h2>
          </div>
          <a href="/blog/" class="view-all">
            View All
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>

        <div class="blog-grid">
          {recentPosts.map((post, index) => (
            <div class={`stagger-${index + 1}`} style="opacity: 0; animation: fadeIn 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;">
              <BlogPostCard
                title={post.data.title}
                description={post.data.description}
                slug={post.slug}
                pubDate={post.data.pubDate}
                author={post.data.author}
                categories={post.data.categories}
              />
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- CTA Section -->
    <section class="cta-section glass-card animate-slide-up">
      <div class="cta-glow"></div>
      <div class="cta-content">
        <span class="section-label">Stay Connected</span>
        <h2>Never Miss an Update</h2>
        <p>Subscribe to the RSS feed to get the latest news about new applications and blog posts.</p>
        <a href="/feed.xml" class="button">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M4 11a9 9 0 0 1 9 9"/>
            <path d="M4 4a16 16 0 0 1 16 16"/>
            <circle cx="5" cy="19" r="1"/>
          </svg>
          Subscribe to RSS
        </a>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .home {
    animation: fadeIn 0.5s ease-out;
  }

  /* Hero Section */
  .hero {
    position: relative;
    text-align: center;
    padding: 4rem 0 5rem;
    margin-bottom: 4rem;
    overflow: hidden;
  }

  .hero-content {
    position: relative;
    z-index: 1;
  }

  .hero h1 {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    margin-bottom: 1.5rem;
    line-height: 1.1;
  }

  .hero-greeting {
    display: block;
    font-size: 0.4em;
    font-weight: 500;
    color: var(--color-muted);
    margin-bottom: 0.5rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  .hero-description {
    font-size: 1.25rem;
    color: var(--color-muted);
    margin-bottom: 2.5rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.7;
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .hero-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, var(--color-accent-glow) 0%, transparent 70%);
    opacity: 0.5;
    pointer-events: none;
    z-index: 0;
  }

  /* Section Headers */
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--color-border);
  }

  .section-title {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .section-label {
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent);
  }

  .section-header h2 {
    margin: 0;
    font-size: 2rem;
  }

  .view-all {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: var(--radius-full);
    font-weight: 600;
    font-size: 0.9rem;
    color: var(--color-accent);
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    transition: var(--transition);
  }

  .view-all:hover {
    background: var(--color-accent);
    color: white;
    border-color: var(--color-accent);
    transform: translateX(4px);
  }

  /* Sections */
  .featured-section,
  .blog-section {
    margin-bottom: 4rem;
  }

  .apps-grid,
  .blog-grid {
    display: grid;
    gap: 1.5rem;
  }

  /* CTA Section */
  .cta-section {
    position: relative;
    text-align: center;
    padding: 4rem 2rem;
    margin-top: 2rem;
    overflow: hidden;
  }

  .cta-glow {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 400px;
    height: 200px;
    background: radial-gradient(ellipse, var(--color-accent-glow) 0%, transparent 70%);
    opacity: 0.6;
    pointer-events: none;
  }

  .cta-content {
    position: relative;
    z-index: 1;
  }

  .cta-section h2 {
    margin-bottom: 1rem;
  }

  .cta-section p {
    color: var(--color-muted);
    margin-bottom: 2rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero {
      padding: 3rem 0 4rem;
    }

    .hero-description {
      font-size: 1.1rem;
    }

    .section-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .section-header h2 {
      font-size: 1.5rem;
    }

    .cta-section {
      padding: 3rem 1.5rem;
    }
  }
</style>
