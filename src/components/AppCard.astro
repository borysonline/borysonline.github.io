---
export interface Props {
  title: string;
  description: string;
  slug: string;
  version?: string;
  category: string;
  icon?: string;
  featured?: boolean;
}

const { title, description, slug, version, category, icon, featured } = Astro.props;
---

<article class="app-card glass-card" class:list={{ featured }}>
  <div class="app-card-inner">
    {icon ? (
      <div class="app-icon">
        <img src={icon} alt={title} />
      </div>
    ) : (
      <div class="app-icon app-icon-placeholder">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <rect x="3" y="3" width="7" height="7" rx="1"/>
          <rect x="14" y="3" width="7" height="7" rx="1"/>
          <rect x="14" y="14" width="7" height="7" rx="1"/>
          <rect x="3" y="14" width="7" height="7" rx="1"/>
        </svg>
      </div>
    )}
    
    <div class="app-info">
      <div class="app-header">
        <h3><a href={`/apps/${slug}/`}>{title}</a></h3>
        {featured && (
          <span class="featured-badge">
            <svg width="12" height="12" viewBox="0 0 24 24" fill="currentColor">
              <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
            </svg>
            Featured
          </span>
        )}
      </div>
      
      <div class="app-meta">
        <span class="category badge badge-gradient">{category}</span>
        {version && <span class="version badge badge-glass">v{version}</span>}
      </div>
      
      <p class="description">{description}</p>
      
      <div class="app-links">
        <a href={`/apps/${slug}/`} class="view-app">
          View Details
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
        <div class="meta-links">
          <a href={`/apps/${slug}/terms/`} class="meta-link">Terms</a>
          <a href={`/apps/${slug}/privacy/`} class="meta-link">Privacy</a>
        </div>
      </div>
    </div>
  </div>
</article>

<style>
  .app-card {
    padding: 0;
    overflow: hidden;
  }

  .app-card-inner {
    display: flex;
    gap: 1.5rem;
    padding: 1.5rem;
  }

  .app-card.featured {
    background: linear-gradient(135deg, 
      rgba(99, 102, 241, 0.1) 0%, 
      rgba(168, 85, 247, 0.05) 100%
    );
    border-color: rgba(99, 102, 241, 0.3);
  }

  .app-card.featured::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--color-gradient);
  }

  .app-icon {
    flex-shrink: 0;
    width: 80px;
    height: 80px;
    border-radius: var(--radius-lg);
    overflow: hidden;
    background: var(--color-bg-tertiary);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .app-icon img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .app-icon-placeholder {
    color: var(--color-muted);
  }

  .app-info {
    flex: 1;
    min-width: 0;
  }

  .app-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
    flex-wrap: wrap;
  }

  .app-info h3 {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 700;
  }

  .app-info h3 a {
    color: var(--color-primary);
    text-decoration: none;
    transition: var(--transition-fast);
  }

  .app-info h3 a:hover {
    color: var(--color-accent);
  }

  .featured-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.25rem 0.625rem;
    border-radius: var(--radius-full);
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    background: var(--color-gradient);
    color: white;
  }

  .app-meta {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
    flex-wrap: wrap;
  }

  .description {
    margin: 0 0 1rem 0;
    color: var(--color-text);
    line-height: 1.6;
    font-size: 0.95rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .app-links {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .view-app {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: white;
    background: var(--color-gradient);
    padding: 0.625rem 1.25rem;
    border-radius: var(--radius-md);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: var(--transition);
    box-shadow: var(--shadow-sm);
  }

  .view-app:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md), var(--shadow-glow);
    color: white;
  }

  .view-app svg {
    transition: var(--transition-fast);
  }

  .view-app:hover svg {
    transform: translateX(3px);
  }

  .meta-links {
    display: flex;
    gap: 1rem;
  }

  .meta-link {
    color: var(--color-muted);
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 500;
    transition: var(--transition-fast);
    position: relative;
  }

  .meta-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--color-accent);
    transition: var(--transition);
  }

  .meta-link:hover {
    color: var(--color-accent);
  }

  .meta-link:hover::after {
    width: 100%;
  }

  @media (max-width: 600px) {
    .app-card-inner {
      flex-direction: column;
      gap: 1rem;
    }

    .app-icon {
      width: 64px;
      height: 64px;
    }

    .app-links {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
