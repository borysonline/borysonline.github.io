---
import { formatDate } from '@utils/formatDate';

export interface Props {
  title: string;
  description: string;
  slug: string;
  pubDate: Date;
  author?: string;
  categories?: string[];
}

const { title, description, slug, pubDate, author, categories } = Astro.props;
---

<article class="blog-card glass-card">
  <div class="blog-card-inner">
    <div class="blog-header">
      <div class="blog-meta">
        <time datetime={pubDate.toISOString()} class="date">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
            <line x1="16" y1="2" x2="16" y2="6"/>
            <line x1="8" y1="2" x2="8" y2="6"/>
            <line x1="3" y1="10" x2="21" y2="10"/>
          </svg>
          {formatDate(pubDate)}
        </time>
        {author && (
          <span class="author">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
              <circle cx="12" cy="7" r="4"/>
            </svg>
            {author}
          </span>
        )}
      </div>
      <h3><a href={`/blog/${slug}/`}>{title}</a></h3>
    </div>
    
    <p class="excerpt">{description}</p>
    
    <div class="blog-footer">
      {categories && categories.length > 0 && (
        <div class="categories">
          {categories.map((cat) => (
            <span class="category badge badge-glass">{cat}</span>
          ))}
        </div>
      )}
      
      <a href={`/blog/${slug}/`} class="read-more">
        Read Article
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</article>

<style>
  .blog-card {
    padding: 0;
    overflow: hidden;
    position: relative;
  }

  .blog-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: var(--color-gradient);
    opacity: 0;
    transition: var(--transition);
  }

  .blog-card:hover::before {
    opacity: 1;
  }

  .blog-card-inner {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .blog-header {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .blog-meta {
    display: flex;
    gap: 1.25rem;
    flex-wrap: wrap;
  }

  .date, .author {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    color: var(--color-muted);
    font-size: 0.85rem;
    font-weight: 500;
  }

  .blog-header h3 {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 700;
    line-height: 1.4;
  }

  .blog-header h3 a {
    color: var(--color-primary);
    text-decoration: none;
    transition: var(--transition-fast);
  }

  .blog-header h3 a:hover {
    color: var(--color-accent);
  }

  .excerpt {
    margin: 0;
    color: var(--color-text);
    line-height: 1.7;
    font-size: 0.95rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .blog-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 0.5rem;
  }

  .categories {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: var(--transition);
    margin-left: auto;
  }

  .read-more svg {
    transition: var(--transition-fast);
  }

  .read-more:hover {
    color: var(--color-accent-hover);
  }

  .read-more:hover svg {
    transform: translateX(4px);
  }

  @media (max-width: 600px) {
    .blog-footer {
      flex-direction: column;
      align-items: flex-start;
    }

    .read-more {
      margin-left: 0;
    }
  }
</style>
